{
  "name": "pix-payments-server",
  "version": "1.0.0",
  "description": "PIX payment system with user authentication and real-time dashboard monitoring. The server part.",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "dev": "babel-node --watch src/app.js",
    "build": "babel src --out-dir dist",
    "prestart": "npm run build",
    "start": "node dist/app.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest",
    "test:watch": "npm run test -- --watch",
    "coverage": "npm run test -- --coverage",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:make": "knex migrate:make",
    "migrate:status": "knex migrate:status"
  },
  "keywords": [],
  "author": "Talvanes Ferreira",
  "license": "WTFPL",
  "devDependencies": {
    "@babel/cli": "^7.28.0",
    "@babel/core": "^7.28.0",
    "@babel/node": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@eslint/js": "^9.31.0",
    "@jest/globals": "^30.0.5",
    "babel-plugin-polyfill-corejs3": "^0.13.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "prettier": "3.6.2"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "dotenv": "^17.2.1",
    "envalid": "^8.1.0",
    "fastify": "^5.4.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "pg": "^8.16.3",
    "pino-pretty": "^13.1.1"
  }
}
